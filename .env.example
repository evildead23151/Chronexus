# ─── Application ─────────────────────────────────────────────
APP_NAME=sentinel
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# ─── PostgreSQL + PostGIS ────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sentinel
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=sentinel_dev_2026
DATABASE_URL=postgresql+asyncpg://sentinel:sentinel_dev_2026@localhost:5432/sentinel

# ─── Neo4j ───────────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sentinel_dev_2026

# ─── Redis ───────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ─── Streams ─────────────────────────────────────────────────
FRAME_STREAM=sentinel:frames
